<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/font-awesome")
    @Styles.Render("~/Content/sharpminds")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/sharpminds")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script type='text/javascript'>
        $(document).ready(function () {
            if ($("[rel=tooltip]").length) {
                $("[rel=tooltip]").tooltip();
            }
        });
    </script>
</head>
<body>
    <header>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="brand" href="/">SharpMinds</a>
                    <div id="menu" class="nav-collapse collapse">
                        <ul class="nav">
                            <li><a href="@Url.Action("Index", "Home")"><i class="icon-home"></i>Home</a></li>
                            <li><a href="@Url.Action("About", "Home")"><i class="icon-magic"></i>About</a></li>
                            <li><a href="@Url.Action("Customers", "Home")"><i class="icon-building"></i>Customers</a></li>
                        </ul>
                        <ul class="nav pull-right">
                            <li><a href="@Url.Action("Support", "Support")"><i class="icon-stethoscope"></i>Support</a></li>
                            <li><a class="disabled" href="#" rel="tooltip" data-toggle="tooltip" data-placement="bottom" data-original-title="Coming soon.">Sign Up</a></li>
                            <li class="divider-vertical"></li>
                            <li class="dropdown" rel="tooltip" data-toggle="tooltip" data-placement="bottom" data-original-title="Coming soon.">
                                <a class="dropdown-toggle" href="#" data-toggle="dropdown">Sign In <strong class="caret"></strong></a>
                                <div class="dropdown-menu" style="padding: 15px; padding-bottom: 0px;">
                                    <form method="post" action="" accept-charset="UTF-8" style="opacity: 0.2;">
                                        <input class="disabled" id="username" name="username" placeholder="Username" style="margin-bottom: 15px;" type="text">
                                        <input class="disabled" id="password" name="password" placeholder="Password" style="margin-bottom: 15px;" type="password">
                                        <input class="disabled" id="remember-me" name="remember-me" style="float: left; margin-right: 10px;" type="checkbox" value="1">
                                        <label class="disabled " @*for="user_remember_me"*@>Remember me</label>
                                        <input class="disabled btn btn-primary btn-block" @*type="submit" *@ id="sign-in" value="Sign In">
                                        <label class="disabled" style="text-align: center; margin-top: 5px">or</label>
                                        <input class="disabled btn btn-primary btn-block" type="button" id="sign-in-google" value="Sign In with Google">
                                        <input class="disabled btn btn-primary btn-block" type="button" id="sign-in-twitter" value="Sign In with Twitter">
                                    </form>
                                    <div class="btn btn-danger btn-large disabled" style="text-align: center; position: absolute; top: 56%; left: 22%; margin-top: -50px; opacity: 1.0;">
                                        Coming soon
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="container">
                <div class="float-left" style="padding-top: 10px;">
                    <p>&copy; @DateTime.Now.Year - SharpMinds - CVR 35109234 - contact 22663370 - <a href="mailto:cani@sharpminds.dk">cani@sharpminds.dk</a></p>
                </div>
            </div>
        </div>
    </footer>

</body>
</html>
